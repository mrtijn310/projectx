
<html>

<head>
    <title></title>

    <!-- Compiled and minified CSS -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css">

    <style>
        header,
        main,
        footer {
            padding-left: 300px;
            margin: 0;
        }

        ul.side-nav.fixed li.logo {
            text-align: center;
            margin-top: 20px;
            margin-bottom: 20px;
        }

        #logo-container {
            height: 80px;
        }

            #logo-container:hover {
                background: transparent;
            }

        nav.top-nav {
            height: 100px;
            box-shadow: none;
        }

        .side-nav.fixed li.active {
            background-color: #6e5ba7;
        }

            .side-nav.fixed li.active a,
            .side-nav.fixed li a:hover {
                background-color: #6e5ba7;
                color: #fff;
            }

        nav {
            /* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#6e5ba7+0,5b84a7+100 */
            background: #6e5ba7;
            /* Old browsers */
            background: -moz-linear-gradient(left, #6e5ba7 0%, #5b84a7 100%);
            /* FF3.6-15 */
            background: -webkit-linear-gradient(left, #6e5ba7 0%, #5b84a7 100%);
            /* Chrome10-25,Safari5.1-6 */
            background: linear-gradient(to right, #6e5ba7 0%, #5b84a7 100%);
            /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
            filter: progid: DXImageTransform.Microsoft.gradient( startColorstr='#6e5ba7', endColorstr='#5b84a7', GradientType=1);
            /* IE6-9 */
        }

        .purple {
            background-color: #6e5ba7 !important;
        }

        .btn:hover {
        }

        .page-title {
            font-size: 20px;
        }

        nav ul a {
            line-height: 34px;
        }

        nav ul li.active {
            background: transparent;
        }

            nav ul li.active a,
            nav ul li a:hover {
                background: transparent;
                border-bottom: 3px solid #5B84A7;
            }

            .card {
                min-height: 320px;
                 display: flex;
                flex-flow: column;
            }

            .card-action {
                  flex: 0 1 40px;
            }

            .card-content {
                  flex: 1 1 auto;
            }

        .card .card-action a:not(.btn):not(.btn-large):not(.btn-floating) {
            color: #6e5ba7;
        }

            .card .card-action a:not(.btn):not(.btn-large):not(.btn-floating):hover {
                color: #c6bfdd;
            }

        .container {
            margin: 0 20px;
        }

        .switch {
            float: left;
            margin-top: 3px;
            position: relative;
        }

            .switch label input[type=checkbox]:checked + .lever {
                background-color: #c6bfdd;
            }

                .switch label input[type=checkbox]:checked + .lever:after {
                    background-color: #6e5ba7;
                    left: 24px;
                }

        .side-nav span.badge.new::before,
        .collapsible span.badge.new::before {
            background-color: #FF8000;
        }

        .btn-floating {
            background-color: #6e5ba7;
        }

            .btn-floating:hover {
                background-color: #6e5ba7;
            }

        input[type=range] + .thumb,
        input[type=range]::-webkit-slider-thumb {
            background-color: #6e5ba7;
        }

        body {
            background: #FAFAFA;
        }

        .row .col.setThisCard {
            width: 100%;
            margin-left: auto;
            left: auto;
            right: auto;
            transition: width .2s;
        }

            .row .col.setThisCard .card {
                height: 50%;
                transition: height .2s;
            }

        .modal .input-field {
            margin-top: -1rem;
        }
    </style>
</head>

<body>
    <header>
        <nav class="top-nav">
            <div class="container">
                <div class="nav-wrapper">
                    <a class="page-title" href="#">Instellen </a><a class="page-title"> > </a><a class="page-title">Regels</a>
                    <ul id="topNav">
                        <li class="active">@Html.ActionLink("Regels", "Regels", "Home")</li>
                        <li>@Html.ActionLink("Apparaten", "Apparaten", "Home")</li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container"><a href="#" data-activates="nav-mobile" class="button-collapse top-nav full hide-on-large-only"><i class="material-icons">menu</i></a></div>
        <ul id="nav-mobile" class="side-nav fixed" style="transform: translateX(0px);">
            <li class="logo">
                <a id="logo-container" href="#" class="brand-logo">
                    <img src="~/Static/img/crouny-black.png" height="100%" />
                </a>
            </li>
            <li class="bold"><a href="#" class="waves-effect waves-purple">Bediening</a></li>
            <li class="bold active"><a href="#" class="waves-effect waves-purple">Instellen</a></li>
            <li class="bold"><a href="#" class="waves-effect waves-purple">Winkel <span class="new badge">4</span></a></li>
        </ul>
    </header>
    <main>
        <div class="container">
            @RenderBody()
        </div>

        <!-- Modal Structure -->
        <div id="modal1" class="modal modal-fixed-footer">
            <div class="modal-content">
                <h4>Plugin name</h4>
                <p>A bunch of text</p>
                <div class="row">
                    <div class="switch">
                        <label>
                            <input type="checkbox"> Lamp <span class="lever"></span>
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="switch">
                        <label>
                            <input type="checkbox"> Verwarming <span class="lever"></span>
                        </label>
                    </div>
                    <div class="input-field col s3">
                        <select>
                            <option value="" disabled selected>Warmte</option>
                            <option value="1">15 graden</option>
                            <option value="2">20 graden</option>
                            <option value="3">25 graden</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s3">
                        <select>
                            <option value="" disabled selected>Aparaat</option>
                            <option value="1">Lamp</option>
                            <option value="2">Verwarming</option>
                            <option value="3">Stereo</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a href="#!" class="modal-action modal-close waves-effect btn purple">Opslaan</a>
                <a href="#!" class="modal-action modal-close waves-effect waves-purple btn-flat">Annuleren</a>
            </div>
        </div>
    </main>

    <!-- Compiled and minified JavaScript -->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
    <script>
        $(document).ready(function () {
            // the "href" attribute of .modal-trigger must specify the modal ID that wants to be triggered
            $('.modal').modal();
            $('select').material_select();
        });
    </script>
</body>

</html>